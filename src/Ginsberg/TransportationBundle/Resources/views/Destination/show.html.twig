{% extends 'GinsbergTransportationBundle::admin_layout.html.twig' %}

{% block body -%}
   <h1>Destination</h1>
  <ul class="record_actions">
    <li>
        <a href="{{ path('destination') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('destination_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
  </ul>
  <table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ entity.isactive }}</td>
        </tr>
        <tr>
            <th>Program</th>
            <td><a href="{{ path('program_show', { 'id': entity.program.id }) }}">{{ entity.program }}</a></td>
        </tr>

    </tbody>
  </table>
{% endblock %}
