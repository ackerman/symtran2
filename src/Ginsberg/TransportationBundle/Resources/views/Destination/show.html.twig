{% extends 'GinsbergTransportationBundle::admin_layout.html.twig' %}

{% block body -%}
   
  <div class="record_actions">
    <span class='back button'>
        <a href="{{ path('destination') }}">
            Destinations
        </a>
    </span>
    <span class='edit button'>
        <a href="{{ path('destination_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </span>
    <span>{{ form(delete_form) }}</span>
  </div>
  <h1>Destination</h1>
  <table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ entity.isactive }}</td>
        </tr>
        <tr>
            <th>Program</th>
            <td><a href="{{ path('program_show', { 'id': entity.program.id }) }}">{{ entity.program }}</a></td>
        </tr>

    </tbody>
  </table>
{% endblock %}
