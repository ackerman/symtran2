{% extends 'GinsbergTransportationBundle::admin_layout.html.twig' %}

{% block body -%}
    <h1>Installation</h1>
<div class="record_actions">
    <span class="back button">
        <a href="{{ path('installation') }}">
            Back to Installations
        </a>
    </span> 
    <span class="edit button">
        <a href="{{ path('installation_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </span>
    <span>{{ form(delete_form) }}</span>
</div>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Site Open</th>
                <td>{% if entity.isOpen == true %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Date to Open for Reservations</th>
                <td>{{ entity.reservationsOpen }}</td>
            </tr>
            <tr>
                <th>Date Cars Become Available</th>
                <td>{{ entity.carsAvailable }}</td>
            </tr>
            <tr>
                <th>Date Cars Picked Up from PTS for Fall Semester</th>
                <td>{{ entity.fallStart|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Thanksgiving Starts</th>
                <td>{{ entity.thanksgivingStart|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Thanksgiving Ends</th>
                <td>{{ entity.thanksgivingEnd|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Date Cars Returned to PTS for Fall Semester</th>
                <td>{{ entity.fallEnd|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Date Cars Picked Up from PTS for Winter Semester</th>
                <td>{{ entity.winterStart|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>MLK Starts</th>
                <td>{{ entity.mlkStart|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>MLK Ends</th>
                <td>{{ entity.mlkEnd|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Springbreak Starts</th>
                <td>{{ entity.springbreakStart|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Springbreak Ends</th>
                <td>{{ entity.springbreakEnd|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Date Cars Returned to PTS for Winter Semester</th>
                <td>{{ entity.winterEnd|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Fall Back (Daylight Saving Time Ends)</th>
                <td>{{ entity.fallBack|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Spring Forward (Dalylight Saving Time Begins</th>
                <td>{{ entity.springForward|date('Y-m-d g:i A') }}</td>
            </tr>
            <tr>
                <th>Daily Opening (24-hr time)</th>
                <td>{{ entity.dailyOpen }}</td>
            </tr>
            <tr>
                <th>Daily Closing (24-hr time)</th>
                <td>{{ entity.dailyClose }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
