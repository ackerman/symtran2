{% extends 'GinsbergTransportationBundle::admin_layout.html.twig' %}

{% block body -%}
  
    <h1>Programs <span class="button"><a href="{{ path('program_new') }}">
            Add
        </a></span></h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Shortcode</th>
                <th>Eligibility_group</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortcode }}</td>
                <td>{{ entity.eligibilitygroup }}</td>
                <td>
                <ul class='actions'>
                    <li>
                        <a href="{{ path('program_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('program_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        
    {% endblock %}
