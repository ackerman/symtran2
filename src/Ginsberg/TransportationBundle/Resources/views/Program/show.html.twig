{% extends 'GinsbergTransportationBundle::admin_layout.html.twig' %}

{% block body -%}
<div class="record_actions">
    <span class="back button">
        <a href="{{ path('program') }}">
            Programs
        </a>
    </span>
    <span class="edit button">
        <a href="{{ path('program_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </span>
    <span class="delete button">{{ form(delete_form) }}</span>
</div>
    <h1>Program</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Shortcode Mask</th>
                <td>{{ entity.shortcode }}</td>
            </tr>
            <tr>
                <th>Eligibility Group</th>
                <td>{{ entity.eligibilityGroup }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
