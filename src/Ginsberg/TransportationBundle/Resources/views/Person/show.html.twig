{% extends 'GinsbergTransportationBundle::admin_layout.html.twig' %}

{% block body -%}
    <h1>Person</h1>
    <ul class="record_actions">
      <li>
          <a href="{{ path('person') }}">
              Back to the list
          </a>
      </li>
      <li>
          <a href="{{ path('person_edit', { 'id': entity.id }) }}">
              Edit
          </a>
      </li>
      <li>{{ form(delete_form) }}</li>
    </ul>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Uniqname</th>
                <td>{{ entity.uniqname }}</td>
            </tr>
            <tr>
                <th>Program</th>
                <td><a href="{{ path('program_show', { 'id': entity.program.id }) }}">{{ entity.program }}</a></td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Date approved</th>
                <td>{{ entity.dateApproved is empty ? "" : entity.dateApproved|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Terms agreed</th>
                <td>{{ entity.isTermsAgreed }}</td>
            </tr>
            <tr>
                <th>Has ticket</th>
                <td>{{ entity.hasUnpaidTicket }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Modified</th>
                <td>{{ entity.modified|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
